{
  "name": "Nikola",
  "version": "0.1.0",
  "description": "Open source and unoffocial desktop app to control tesla vehicles",
  "author": "Geraldo Ramos",
  "homepage": "https://github.com/geraldoramos/nikola",
  "repository": {
    "type": "git",
    "url": "https://github.com/geraldoramos/nikola.git"
  },
  "build": {
    "directories": {
      "output": "packaged"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "geraldoramos",
        "repo": "nikola"
      }
    ],
    "appId": "com.github.geraldoramos.nikola",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icons/icon.icns",
      "publish": [
        "github"
      ],
      "target": [
        "zip",
        "dmg"
      ]
    },
    "dmg": {
      "background": "icons/background.png"
    },
    "win": {
      "target": "zip",
      "icon": "icons/icon.ico",
      "publish": [
        "github"
      ]
    }
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "prod": "webpack --config webpack.build.config.js && electron --noDevServer .",
    "dev": "webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js",
    "build-ui": "webpack --config webpack.build.config.js",
    "build": "yarn build-ui && build -w",
    "publish": "yarn build-ui && build -m -w -p always"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.2",
    "babel-preset-react": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "css-loader": "^0.28.1",
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0",
    "electron-packager": "^13.1.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.28.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "style-loader": "^0.19.0",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^3.1.11",
    "js-yaml": ">=3.13.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.18",
    "@fortawesome/free-solid-svg-icons": "^5.8.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "electron-context-menu": "^0.12.1",
    "electron-log": "^3.0.6",
    "electron-positioner": "^4.1.0",
    "electron-store": "^3.2.0",
    "electron-updater": "^4.0.6",
    "google-maps-react": "^2.0.2",
    "react-tooltip": "^3.10.0",
    "teslajs": "^4.3.9"
  }
}
